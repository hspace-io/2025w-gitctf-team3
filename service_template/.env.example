# Flask Configuration
SECRET_KEY=change-me-to-a-random-string

# Database Engine
# 기본은 sqlite (별도 DB 없이 단일 컨테이너로 실행)
# 외부 MySQL을 쓸 경우 mysql로 변경하고 아래 항목을 채움
DB_ENGINE=sqlite

# MySQL Database Configuration (mysql 사용 시에만 필요)
DB_HOST=db
DB_PORT=3306
DB_NAME=hspace
DB_USER=huser
DB_PASSWORD=your-database-password
DB_ROOT_PASSWORD=your-root-password

# File Upload Size Limit (bytes, default 8MB)
MAX_CONTENT_LENGTH=8388608
